<?xml version="1.0" encoding="WINDOWS-1251"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">

<properties>
	<!-- See org.zenframework.z8.server.config.ServerConfig -->

	<entry key="application.database.schema">public</entry>
	<entry key="application.database.user">z8</entry>
	<entry key="application.database.password">z8</entry>
	<entry key="application.database.driver">org.postgresql.Driver</entry>
	<entry key="application.database.connection">jdbc:postgresql://localhost:5432/z8</entry>
	<entry key="application.database.charset">UTF-8</entry>

	<entry key="web.server.upload.max">5</entry>                        <!-- default=5, megabytes -->
	<entry key="web.client.download.max">1</entry>                      <!-- default=1, megabytes -->
	<entry key="web.client.hashPassword">true</entry>                   <!-- default=true -->

	<entry key="application.server.port"></entry>                       <!-- default=15000, 0 to disable -->
	<entry key="application.server.host"></entry>                       <!-- default=localhost -->

	<entry key="authority.center.port"></entry>                         <!-- default=10000, 0 to disable -->
	<entry key="authority.center.host"></entry>                         <!-- default=localhost -->
	<entry key="authority.center.cache"></entry>                        <!-- default=true -->
	<entry key="authority.center.session.timeout"></entry>              <!-- default=1440, minutes -->

	<entry key="user.incorrect.password.max"></entry>                   <!-- default=0 -->
	<entry key="user.incorrect.password.timeout"></entry>               <!-- default=0, minutes -->

	<entry key="interconnection.center.port"></entry>                   <!-- default=20000, 0 to disable -->
	<entry key="interconnection.center.host"></entry>                   <!-- default=localhost -->
	<entry key="interconnection.center.cache"></entry>                  <!-- default=true -->

	<entry key="trace.sql">false</entry>                                <!-- default=false -->
	<entry key="trace.sql.connections">false</entry>                    <!-- default=false -->

	<entry key="scheduler.enabled">false</entry>                        <!-- default=true -->

	<entry key="transport.job.cron"></entry>                         <!-- default="*/5 * * * *", <empty> to disable -->
	<entry key="maintenance.job.cron"></entry>                       <!-- default="0 * * * *", <empty> to disable -->
	<entry key="exchange.job.cron"></entry>                          <!-- default="", <empty> to disable -->

	<entry key="fts.configuration">russian</entry>

	<entry key="office.home">C:/Program Files (x86)/LibreOffice 4.0</entry>
</properties>
